/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./out-tsc/app",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
        ]
    },
    "files": [
        "src/main.ts",
        "src/polyfills.ts"
    ],
    "include": [
        "src/**/*.d.ts"
    ],
    "paths": {
        "@augur": [
            "src/vendor/ngx-augur/src"
        ],
        "@platform": [
            "src/platform"
        ],
        "@platform/*": [
            "src/platform/*"
        ],
        "@shared": [
            "src/shared"
        ],
        "@shared/*": [
            "src/shared/*"
        ],
        "@src/*": [
            "src/*.web",
            "src/*"
        ]
    }
}